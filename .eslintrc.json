{
  "env": {
    "es6": true,
    "browser": true
  },
  "globals": {
    "ENV": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "prefer-const": "error",
    "no-const-assign": "error",
    "no-var": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "no-multiple-empty-lines": "error",
    "eol-last": ["error", "always"]
  }
}